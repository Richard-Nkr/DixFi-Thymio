{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    {% if app.user%}
        {% if is_granted('ROLE_TEACHER') %}
            <a href="{{ path('teacher_show',{'id': app.user.id}) }}"> <button class="greenButton" value="See profil"> Voir mon profil enseignant </button></a>
            <br>
        <a href="{{ path('student_group_new') }}"> <button value="Create groups"> Créer mes groupes </button></a>

        {% elseif is_granted('ROLE_STUDENT_GROUP') %}
            <a href="{{ path('student_group_show', {'id': app.user.id}) }}"> <button class="greenButton" value="See profil"> Voir le profil de mon groupe </button></a>
            <br>
         {% else %}
            <a href="{{ path('user_guest_show', {'id': app.user.id}) }}"> <button class="greenButton" value="See profil"> Voir mon profil utilisateur </button></a>
            <br>
        {% endif %}
        <a href="{{ path('app_logout') }}"> <button class="redButton" value="Se déconnecter"> Se déconnecter </button> </a>
        <br>
    {% else %}
        <p class="introButton"> <b> Connectez-vous à votre espace : </b></p>
        <a href="{{ path('app_login') }}"> <button class="greenButton" value="Se connecter"> Se connecter </button> </a>
        <br>
        <p class="introButton"> <b> Si vous souhaitez rejoindre l'aventure des DixFi de Thymio : </b></p>
        <a href="{{ path('user_guest_new') }}"> <button class="redButton" value="Create new"> Je souhaite créer un compte </button></a>
    {% endif %}
{% endblock %}

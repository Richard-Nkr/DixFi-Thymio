{% extends 'base.html.twig' %}

{% block title %}Voir mes challenges{% endblock %}

{% block body %}
    <fieldset class="showChallenge">
        <legend>Mes défis publics</legend>
        <div class="challenge_container">
            {% for challenge in public_challenges %}
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title"> {{ challenge.name }}</h4>
                            <h5 class="card-text"> {{ challenge.difficulty }}</h5>
                            <div>
                                <table>
                                    <tr>
                                        <td>
                                            <div class="buttonMargin">
                                                <a href="{{ path('public_challenge_show', {'id': challenge.id}) }}">
                                                    <button class="btnB">Voir ce défi</button>
                                                </a>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="buttonMargin">
                                                <a href="{{ path('public_challenge_edit', {'id': challenge.id}) }}">
                                                    <button class="btnB">Editer ce défi</button>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="buttonMargin">
                                                <a href="{{ path('help_new', {'id': challenge.id}) }}">
                                                    <button class="btnB">Ajouter un indice</button>
                                                </a>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="buttonMargin">
                                                <a href="{{ path('help_list', {'id': challenge.id}) }}">
                                                    <button class="btnB">Voir les indices</button>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    {% if challenge.nameCorrection == null %}
                                        <tr>
                                            <td colspan="2" align="center">
                                                <div class="buttonMargin">
                                                    <a href="{{ path('public_challenge_addCorrection', {'id': challenge.id}) }}">
                                                        <button class="btnC">Ajouter la correction</button>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endif %}
                                </table>
                            </div>
                        </div>
                    </div>
            {% endfor %}
        </div>
    </fieldset>


    <fieldset class="showChallenge">
        <legend>Mes défis privés</legend>
        <div class="challenge_container">
            {% for challenge in private_challenges %}
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title">{{ challenge.name }}</h2>
                            <h4 class="card-text"> {{ challenge.difficulty }}</h4>
                            <table>
                                <tr>
                                    <td>
                                        <div class="buttonMargin">
                                            <a href="{{ path('private_challenge_view_teacher', {'id': challenge.id}) }}">
                                                <button class="btnB">Voir ce
                                                    défi
                                                </button>
                                            </a>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="buttonMargin">
                                            <a href="{{ path('private_challenge_edit', {'id': challenge.id}) }}">
                                                <button class="btnB">Editer ce défi</button>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="buttonMargin">
                                            <a href="{{ path('help_new', {'id': challenge.id}) }}">
                                                <button class="btnB">Ajouter un indice</button>
                                            </a>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="buttonMargin">
                                            <a href="{{ path('help_list', {'id': challenge.id}) }}">
                                                <button class="btnB">Voir les indices</button>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
            {% endfor %}
        </div>
    </fieldset>

    <a href="{{ path('challenge_new',{'id': app.user.id}) }}">
        <button class="btnG">Créer un défi</button>
    </a>

{% endblock %}


{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}


{% block body %}
    <form method="post">
        {% for message in app.flashes('notification') %}
            <div class="alert alert-info alert-dismissible fade show">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
        {% if error %}
            <div class="alert alert-danger"> Les informations transmises sont erronées </div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <fieldset class="showChallenge2">
            <legend>Connexion à mon compte</legend>
            <table class="form_table3" align="center">
                <tr>
                    <td class="td_label3">
                        <div class="form-group">
                            <label class="form_label2" for="inputId">Identifiant :</label>
                        </div>
                    </td>
                    <td class="td_field2">
                        <div class="col-sm-14">
                            <input type="text" class="form_field" value="{{ last_username }}" name="id" id="inputId" required
                                   autofocus>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="td_label3">
                        <div class="form-group">
                            <label class="form_label2" for="inputPassword">Mot de passe :</label>
                        </div>
                    </td>
                    <td class="td_field2">
                        <div class="col-sm-14">
                            <input type="password" class="form_field" name="password" id="inputPassword" required>
                        </div>
                    </td>
                </tr>

            </table>


            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
            <br>
        </fieldset>

        <div class="buttonMargin">
            <button class="btnG" type="submit">
                Se connecter
            </button>
        </div>
    </form>
{% endblock %}


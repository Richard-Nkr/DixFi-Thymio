{{ form_start(form, {'attr': {'id': 'new_edit_teacher'}}) }}
    {# utilisation de classes bootstrap pour la mise en forme #}
<fieldset id="formInscription">
    <legend id="legendInscription">Création d'un compte Enseignant</legend>
    <div class="form-group">
        {{ form_label(form.nickname, 'Surnom : ') }}
        <div class="col-sm-14">
            {{ form_widget(form.nickname) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.nameTeacher, 'Nom : ') }}
        <div class="col-sm-14">
            {{ form_widget(form.nameTeacher) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.firstNameTeacher, 'Prénom : ') }}
        <div class="col-sm-14">
            {{ form_widget(form.firstNameTeacher) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.mailTeacher, 'Adresse mail : ') }}
        <div class="col-sm-14">
            {{ form_widget(form.mailTeacher) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.password, 'Mot de passe : ') }}
        <div class="col-sm-14">
            {{ form_widget(form.password)}}
        </div>
    </div>
    <div class="form-group">
        <label for="verifpass">Saisir une seconde fois votre mot de passe : </label>
        <div class="col-sm-14">
            <input type="password" id="verifpass" required>
        </div>
    </div>
    <button class="btn btn-success">{{ button_label|default('Créer mon compte') }}</button>

</fieldset>
{{ form_end(form) }}

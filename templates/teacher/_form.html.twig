{{ form_start(form, {'attr': {'id': 'new_edit_teacher'}}) }}
<h3 class="titleGuide">Modification de mon compte</h3>
<fieldset class="userIndex">
    <table class="form_table">
        <tr>
            <td class="td_label">
                {{ form_label(form.nickname, 'Surnom : ') }}
            </td>
            <td class="td_field2">
                {{ form_widget(form.nickname, { 'attr': {'class': 'form_field','placeholder':app.user.nickname, 'autocomplete': 'off', 'outline': 'none'} }) }}
            </td>
        </tr>
        <tr>
            <td class="td_label">
                {{ form_label(form.name, 'Nom : ') }}
            </td>
            <td class="td_field2">
                {{ form_widget(form.name, { 'attr': {'class': 'form_field','placeholder':app.user.name, 'autocomplete': 'off', 'outline': 'none'} }) }}
            </td>
        </tr>
        <tr>
            <td class="td_label">
                {{ form_label(form.firstName, 'Pr√©nom : ') }}
            </td>
            <td class="td_field2">
                {{ form_widget(form.firstName, { 'attr': {'class': 'form_field','placeholder':app.user.firstname, 'autocomplete': 'off', 'outline': 'none'} }) }}
            </td>
        </tr>
        <tr>
            <td class="td_label">
                {{ form_label(form.mail, 'Adresse mail : ') }}
                <span class="error">{{ form_errors(form.mail) }}</span>
            </td>
            <td class="td_field2">
                {{ form_widget(form.mail, { 'attr': {'class': 'form_field','placeholder':app.user.mail, 'autocomplete': 'off', 'outline': 'none'} }) }}
            </td>
        </tr>
        <tr>
            <td class="td_label">
                {{ form_label(form.password, 'Mot de passe : ') }}
            </td>
            <td class="td_field2">
                {{ form_widget(form.password, { 'attr': {'class': 'form_field', 'autocomplete': 'off', 'outline': 'none'} }) }}
            </td>
        </tr>
        <tr>
            <td class="td_label">
                <label for="verifpass">Saisir une seconde fois votre mot de passe : </label>
            </td>
            <td class="td_field2">
                <input class="form_field" type="password" id="verifpass" required>

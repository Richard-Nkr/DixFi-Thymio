<form method="post" action="{{ path('teacher_delete', {'id': app.session.get("id_user")}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.session.get("id_user")) }}">
    <button class="btn btn-success">Delete</button>
</form>

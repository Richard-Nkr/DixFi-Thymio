{% extends 'base.html.twig' %}

{% block title %}Teacher{% endblock %}

{% block body %}
    <h1>Teacher</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ teacher.id }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ teacher.nickname }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ teacher.createdAt ? teacher.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ teacher.password }}</td>
            </tr>
            <tr>
                <th>MailTeacher</th>
                <td>{{ teacher.mailTeacher }}</td>
            </tr>
            <tr>
                <th>NameTeacher</th>
                <td>{{ teacher.nameTeacher }}</td>
            </tr>
            <tr>
                <th>FirstNameTeacher</th>
                <td>{{ teacher.firstNameTeacher }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('teacher_index') }}">back to list</a>

    <a href="{{ path('teacher_edit', {'id': teacher.id}) }}">edit</a>

    {{ include('teacher/_delete_form.html.twig') }}
{% endblock %}

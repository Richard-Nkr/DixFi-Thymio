{% extends 'base.html.twig' %}

{% block title %}Mon profil de Teacher{% endblock %}

{% block body %}
<fieldset class="formListG">
    <legend class="legendInscription">Hello {{ teacher.nickname }} !</legend>
    <div class="form-group">
    <br>
    <table class="table" >
        <tbody>
            <tr>
                <td class="td_label4"> Votre Nickname :</td>
                <td class="td_label3">{{ teacher.nickname }}</td>

                <td class="td_label4"> Votre Identifiant :</td>
                <td class="td_label3">{{ teacher.id }}</td>

            </tr>
            <tr>
                <td class="td_label4">Nom :</td>
                <td class="td_label3">{{ teacher.name }}</td>


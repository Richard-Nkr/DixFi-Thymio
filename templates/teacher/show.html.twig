{% extends 'base.html.twig' %}

{% block title %}Mon profil de Teacher{% endblock %}

{% block body %}
    <h1 class="h1title">Bonjour {{ teacher.nickname }} !</h1>
    <fieldset class="userIndex">
        <div class="form-group">
            <h4> Voici vos données personnelles </h4>
            <br>
            <table class="table">
                <tbody>

                <tr>
                    <th> Votre surnom :</th>
                    <td>{{ teacher.nickname }}</td>
                </tr>
                <tr>
                    <th> Votre identifiant :</th>
                    <td>{{ teacher.id }}</td>
                </tr>
                <tr>
                    <th>Adresse mail :</th>
                    <td>{{ teacher.mail }}</td>
                </tr>
                <tr>
                    <th>Nom :</th>
                    <td>{{ teacher.name }}</td>
                </tr>
                <tr>
                    <th>Prénom :</th>
                    <td>{{ teacher.firstName }}</td>
                </tr>
                <tr>
                    <th>Le compte a été créé le :</th>
                    <td>{{ teacher.createdAt ? teacher.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                </tbody>
            </table>
            <br>
        </div>
    </fieldset>
    <div class="buttonMargin">
        <a href="{{ path('student_group_index') }}">
            <button class="btnB2"> Voir mes groupes</button>
        </a>
    </div>
    <div class="buttonMargin">
        <a href="{{ path('teacher_edit') }}">
            <button class="btnG"> Modifier mon profil</button>
        </a>
    </div>
    {{ include('teacher/_delete_form.html.twig') }}
{% endblock %}
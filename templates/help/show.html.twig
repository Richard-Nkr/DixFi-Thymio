{% extends 'base.html.twig' %}

{% block title %}Help{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
        {% for help in helps %}
            {% if help.challenge === challenge %}
                <tr>
                    <th>Id</th>
                    <td>{{ help.id }}</td>
                </tr>
                <tr>
                    <th>ContentHelp</th>
                    <td>{{ help.contentHelp }}</td>
                </tr>
                <tr>
                    <th>NumberHelp</th>
                    <td>{{ help.numberHelp }}</td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('help_index') }}">back to list</a>

    <a href="{{ path('help_edit', {'id': help.id}) }}">edit</a>

    {{ include('help/_delete_form.html.twig') }}
{% endblock %}

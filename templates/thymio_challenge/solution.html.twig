{% extends 'base.html.twig' %}

{% block title %}ThymioChallenge Correction{% endblock %}
{% block body %}
    <fieldset class="descriptionThymio">
        Solution du défi n°{{ thymio_challenge.id }} : {{ thymio_challenge.name }}
    </fieldset>
  <p class="solutionDescription">Objectif du défi : {{ thymio_challenge.description }} </p>
<fieldset class="solutionThymio">
        <img class="imageSolution" src="{{asset(thymio_challenge.solutionPath)}}" alt="SolutionDixFi">
    </fieldset>
    <div>
        <a href="{{ path('thymio_challenge_index', {'difficulty': thymio_challenge.difficulty})  }}">
            <button type="button" class="btn btn-danger">Retour sur les Dix'Fi {{ thymio_challenge.difficulty }}</button>
        </a>
    </div>
    <br>
    <form method="post" action="{{ path('thymio_challenge_create_pdf', {'id': thymio_challenge.id}) }}" target="_blank">
            <button  class="btn btn-success"> Générer le pdf de la correction du DixFi {{ thymio_challenge.id }}  </button>
    </form>
{% endblock %}

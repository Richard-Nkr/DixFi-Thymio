<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="UTF-8">
    <title>ThymioChallenge</title>

    <link href="{{ absolute_url(asset('css/general.css')) }}" rel="stylesheet">


</head>
<body class="bodyPDF">
<div>
    <fieldset class="descriptionThymio">
        Solution du défi n°{{ thymio_challenge.id }} : {{ thymio_challenge.name }}
    </fieldset>
    <fieldset class="objectifPDF">
        <p class="solutionPDF">Objectif du défi : {{ thymio_challenge.description }} </p>
    </fieldset>
    {% if is_granted('ROLE_TEACHER') %}
        <p> Titulaire de la classe : {{ app.user.name }} {{ app.user.firstname }}</p>
    {% endif %}
    {% if thymio_challenge.id==5 or  thymio_challenge.id==8 %}
        <fieldset class="solutionThymioPDF">
            <img class="imageSolutionPDFbis" src="{{ absolute_url(asset(thymio_challenge.solutionPath)) }}" alt="SolutionDixFi">
        </fieldset>
    {% elseif thymio_challenge.id==10 %}
        <fieldset class="solutionThymioPDF">
            <img class="imageSolutionPDFter" src="{{ absolute_url(asset(thymio_challenge.solutionPath)) }}" alt="SolutionDixFi">
        </fieldset>
    {% else %}
        <fieldset class="solutionThymioPDF">
            <img class="imageSolutionPDF" src="{{ absolute_url(asset(thymio_challenge.solutionPath)) }}" alt="SolutionDixFi">
        </fieldset>
    {% endif %}
</div>
</body>
</html>
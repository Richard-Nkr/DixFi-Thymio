{% extends 'base.html.twig' %}

{% block title %}Défi privée n° {{ privateChallenge.id }}{% endblock %}

{% block body %}


    {% for message in app.flashes('notification') %}
        <div class="alert alert-info alert-dismissible fade show">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
    {% endfor %}

    <fieldset class="showChallenge">

        <legend>Défi n°{{ privateChallenge.id }} : {{ privateChallenge.name }}</legend>
        <p> Crée le : {{ privateChallenge.createdAt ? privateChallenge.createdAt|date('d-m-Y') : '' }} </p>
        <p>Temps nécessaire : {{ privateChallenge.duration }} </p>
        <p> Difficulté : {{ privateChallenge.difficulty }} </p>
        <p> Description : {{ privateChallenge.description }} </p>

    </fieldset>
    <div>
        {{ include('private_challenge/_add_file_form.html.twig') }}
    </div>

{% endblock %}

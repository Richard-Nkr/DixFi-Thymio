{{ form_start(form, {'attr': {'id': 'new_edit_user_guest'}}) }}
    {# utilisation de classes bootstrap pour la mise en forme #}
<fieldset class="formInscription">
    <legend class="legendInscription">Création d'un compte</legend>
    <div class="form-group">
        {{ form_label(form.nickname, 'Surnom : ') }}
        <div class="col-sm-14">
            {{ form_widget(form.nickname) }}
        </div>

    </div>
    <div class="form-group">
        {{ form_label(form.name, 'Nom : ') }}
        <div class="col-sm-14">
            {{ form_widget(form.name) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.firstName, 'Prénom : ') }}
        <div class="col-sm-14">
            {{ form_widget(form.firstName) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.mail, 'Adresse mail : ') }}
        <span class="error">{{ form_errors(form.mail) }}</span>
        <div class="col-sm-14">
            {{ form_widget(form.mail) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.roles, 'Vous vous inscrivez en tant que : ') }}
        <div class="col-sm-14">
            {{ form_widget(form.roles) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.password, 'Mot de passe : ') }}
        <div class="col-sm-14">
            {{ form_widget(form.password)}}
        </div>
    </div>
    <div class="form-group">
        <label for="verifpass">Saisir une seconde fois votre mot de passe : </label>
        <div class="col-sm-14">
            <input type="password" id="verifpass" required>
        </div>
    </div>
    <button class="btn btn-success">{{ button_label|default('Créer mon compte') }}</button>

</fieldset>
{{ form_end(form) }}
